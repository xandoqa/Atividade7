#include <stdio.h>

int main() {
    int num_frutas = 5;
    char *frutas[] = {"Maçã", "Banana", "Laranja", "Morango", "Uva"};
    float precos[] = {2.0, 1.5, 2.2, 3.0, 4.5};
    int continuar = 1;
    float total = 0.0;

    while (continuar) {
        printf("Lista de frutas dispníveis:\n");
        for (int i = 0; i < num_frutas; i++)
            printf("%d. %s - R$%.2f\n", i + 1, frutas[i], precos[i]);

        int escolha, quantidade;
        printf("Escolha uma fruta (1-%d) ou 0 para sair: ", num_frutas);
        scanf("%d", &escolha);

        if (escolha < 0 || escolha > num_frutas)
            printf("Opção inválida.\n");
        else if (escolha == 0)
            continuar = 0;
        else {
            printf("Quantidade desejada: ");
            scanf("%d", &quantidade);
            if (quantidade <= 0)
                printf("Quantidade inválida.\n");
            else {
                float valor_fruta = precos[escolha - 1];
                float subtotal = valor_fruta * quantidade;
                printf("Você comprou %d %s por R$%.2f.\n", quantidade, frutas[escolha - 1], subtotal);
                total += subtotal;
            }
        }
    }

    printf("Valor total da compra: R$%.2f\n", total);
}
